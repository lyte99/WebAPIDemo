
@{
    ViewData["Title"] = "CreateTag";
}

<h2 style="text-align:center">Create Tag</h2>
<div class="container">
    <div>
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-offset-4">
                    <label class="control-label col-md-2" style="text-align:right">Tag Name:</label>
                    <span class="col-md-2">

                        @Html.TextBox("tagName")
                    </span>
                </div>
                <div><br /><br /></div>
            </div>
            <div class="row">
                <div class="col-md-offset-4">
                    <label class="control-label col-md-2" style="text-align:right">Tag Value (int):</label>
                    <span class="col-md-2">

                        @Html.TextBox("tagValue")
                    </span>
                </div>
                <div><br /><br /></div>
            </div>
            <div class="row">
                <div class="col-md-offset-4">
                    <label class="control-label col-md-2" style="text-align:right">Tag Description:</label>
                    <span class="col-md-2">

                        @Html.TextBox("desValue")
                    </span>
                </div>
                <div><br /><br /></div>
            </div>
            <div class="row">
                <div class="col-md-offset-3">
                    <div class="col-md-offset-4">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        }

        </div>
</div>